{
  "name": "vscode-pair-prog",
  "displayName": "VSCode Pair Prog",
  "description": "Real-time peer-to-peer pair programming on a shared workspace.",
  "icon": "icon.png",
  "version": "1.10.2",
  "publisher": "bjoernbosse",
  "license": "MIT",
  "repository": "https://github.com/FluffySpectre/vscode-pair-prog",
  "keywords": ["pair-programming", "collaboration", "realtime", "live-share"],
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pairprog.startSession",
        "title": "PairProg: Start Hosting Session"
      },
      {
        "command": "pairprog.stopSession",
        "title": "PairProg: Stop Hosting Session"
      },
      {
        "command": "pairprog.joinSession",
        "title": "PairProg: Join Session"
      },
      {
        "command": "pairprog.leaveSession",
        "title": "PairProg: Leave Session"
      },
      {
        "command": "pairprog.toggleFollowMode",
        "title": "PairProg: Toggle Follow Mode"
      },
      {
        "command": "pairprog.jumpToPartner",
        "title": "PairProg: Jump to Partner"
      },
      {
        "command": "pairprog.openWhiteboard",
        "title": "PairProg: Open Whiteboard"
      },
      {
        "command": "pairprog.openAbout",
        "title": "PairProg: About"
      },
      {
        "command": "pairprog.sendMessage",
        "title": "PairProg: Send Message"
      },
      {
        "command": "pairprog.shareTerminal",
        "title": "PairProg: Share Terminal"
      },
      {
        "command": "pairprog.stopSharingTerminal",
        "title": "PairProg: Stop Sharing Terminal"
      },
      {
        "command": "pairprog.grantEditAccess",
        "title": "PairProg: Grant Edit Access"
      }
    ],
    "keybindings": [
      {
        "command": "pairprog.sendMessage",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "pairprog.jumpToPartner",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j"
      },
      {
        "command": "pairprog.openWhiteboard",
        "key": "ctrl+shift+w",
        "mac": "cmd+shift+w"
      }
    ],
    "configuration": {
      "title": "PairProg Configuration",
      "properties": {
        "pairprog.port": {
          "type": "number",
          "default": 9876,
          "description": "Port for the WebSocket server."
        },
        "pairprog.username": {
          "type": "string",
          "default": "",
          "description": "Your display name."
        },
        "pairprog.highlightColor": {
          "type": "string",
          "default": "#ec15ef",
          "description": "Color used for the remote partner's cursor and selection."
        },
        "pairprog.ignoredPatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "*.lock",
            "**/out/**",
            "**/dist/**",
            "**/Library/**",
            "**/vendor/**"
          ],
          "description": "Glob patterns for files/folders excluded from sync."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.mjs --production",
    "watch": "node esbuild.mjs --watch",
    "check": "tsc -p ./ --noEmit",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@teamwork/websocket-json-stream": "^2.0.0",
    "minimatch": "^10.2.2",
    "ot-text": "^1.0.2",
    "selfsigned": "^5.5.0",
    "sharedb": "^5.2.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/sharedb": "^5.1.0",
    "@types/vscode": "^1.109.0",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
